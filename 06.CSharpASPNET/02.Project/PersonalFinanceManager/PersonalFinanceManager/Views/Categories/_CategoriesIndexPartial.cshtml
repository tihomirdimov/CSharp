@model ICollection<PFM.Models.Category>
<table class="col-md-12 table-bordered table-striped">
    <thead>
        <tr>
            <th >
                Name
            </th>
            <th colspan="2">
                Actions
            </th>
        </tr>
    </thead>
    @if (Model.Count != 0)
    {
        foreach (var category in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => category.Name)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "Edit", new { id = category.Id }, new AjaxOptions
               {
                   HttpMethod = "POST",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "create-edit"
               })
                </td>
                <td>
                    @Ajax.ActionLink("Delete", "Delete", new { id = category.Id }, new AjaxOptions
               {
                   HttpMethod = "POST",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "update-target"
               })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>No records</td>
        </tr>
    }
</table>