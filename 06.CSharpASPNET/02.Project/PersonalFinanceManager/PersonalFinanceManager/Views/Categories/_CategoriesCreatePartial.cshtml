@model PersonalFinanceManager.Data.Models.Category

@{
    ViewBag.Title = "Create Category";
}
<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
    @using (Ajax.BeginForm("Create", "Categories", new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "update-target",
        OnSuccess = "ClearCategoryForm()"
    }))
    {
        <div>
            <form id="CreateUserForm" class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new {@class = "control-label"})
                    @Html.TextBoxFor(m => Model.Name, new {id = "category-name", @class = "form-control"})
                </div>
                @Html.HiddenFor(m => Model.Id)
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default">Create / Edit</button>
            </form>
        </div>
    }
</div>