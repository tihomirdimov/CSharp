@model PersonalFinanceManager.Data.Models.Category

@{
    ViewBag.Title = "Manage Categories";
}

@using (Ajax.BeginForm("Create", "Categories", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "update-target",
    OnSuccess = "ClearCategoryForm()"
}))
{
    <form id="CreateUserForm">
        <div class="row">
            <div class="form-group col-sm-12 col-md-2 col-lg-2 col-xl-2">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => Model.Name, new { id = "category-name", @class = "form-control input-sm" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12 col-md-2 col-lg-2 col-xl-2">
                @Html.HiddenFor(m => Model.Id, new { id = "category-id"})
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default btn-md">Create / Edit</button>
            </div>
        </div>
    </form>
}
