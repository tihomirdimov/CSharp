@model PersonalFinanceManager.Data.Models.Book

@{
    ViewBag.Title = "Manage Books";
}

@using (Ajax.BeginForm("Create", "Books", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "update-target",
    OnSuccess = "ClearBookForm()"
}))
{
    <form id="CreateBookForm">
        <div class="row">
            <div class="form-group col-sm-12 col-md-2 col-lg-2 col-xl-2">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => Model.Name, new { id = "book-name", @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12 col-md-2 col-lg-2 col-xl-2">
                @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => Model.Currency, new { id = "book-currency", @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-12 col-md-2 col-lg-2 col-xl-2">
                @Html.HiddenFor(m => Model.Id, new { id = "book-currency" })
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default btn-md">Create / Edit</button>
            </div>
        </div>
    </form>
}
