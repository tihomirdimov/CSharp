@model ICollection<PersonalFinanceManager.Data.Models.Book>

@{
    ViewBag.Title = "Books list";
}
<div class="col-md-8">
    @if (Model.Count != 0)
    {
        <table class="table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    <th class="col-md-3">
                        Name
                    </th>
                    <th class="col-md-1">
                        Currency
                    </th>
                    <th class="col-md-8 text-center" colspan="4">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => book.Name)
                        </td>
                        <td class="col-md-1">
                            @Html.DisplayFor(modelItem => book.Currency)
                        </td>
                        <td class="col-md-2 text-center">
                            @using (Ajax.BeginForm("Edit", "Books", new { id = book.Id }, new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "create-edit",
                            }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" class="btn btn-default" value="Rename">
                            }
                        </td>
                        <td class="col-md-2 text-center">
                            @using (Ajax.BeginForm("Delete", "Books", new { id = book.Id }, new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "update-target",
                            }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" class="btn btn-default" value="Delete">
                            }
                        </td>
                        <td class="col-md-2 text-center">
                            @Html.ActionLink("Details", "Details", null, new { id = book.Id }, new { @class = "btn btn-default" })
                        </td>
                        <td class="col-md-2 text-center">
                            @Html.ActionLink("Money Streams", "Index", "MoneyStreams", new { id = book.Id }, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>No records</h3>
    }
</div>